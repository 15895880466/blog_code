<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.mundane.volleydemo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:onClick="stringRequest"
            android:text="stringRequest"
            style="@style/btn"/>

        <Button
            android:onClick="jsonObjectRequest"
            android:text="jsonObjectRequest"
            style="@style/btn"/>

        <Button
            android:onClick="imageRequest"
            android:text="imageRequest"
            style="@style/btn"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="imageLoader"
            android:text="imageLoader"
            style="@style/btn"/>
    </LinearLayout>


</ScrollView>
